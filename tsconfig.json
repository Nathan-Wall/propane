{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "useUnknownInCatchVariables": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "outDir": "./build",
    "rootDir": ".",
    "declaration": true,
    "strict": false,
    "exactOptionalPropertyTypes": false,
    "paths": {
      "@propanejs/babel-messages": ["tools/babel/messages/index.ts"],
      "@propanejs/runtime": ["runtime/index.ts"],
      "@propanejs/pms": ["pms/src/index.ts"],
      "@propanejs/cli": ["cli/index.ts"],
      "@propanejs/react": ["react/index.ts"],
      "@propanejs/babel-messages/*": ["tools/babel/messages/*"],
      "@propanejs/runtime/*": ["runtime/*"],
      "@propanejs/pms/*": ["pms/src/*"],
      "@propanejs/cli/*": ["cli/*"],
      "@propanejs/react/*": ["react/*"],
      "react": ["./node_modules/@types/react"]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "types/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.propane"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "tests",
    "examples"
  ]
}
