import { Endpoint } from '@/pms-core/src/index.js';
import { Message } from '@propane/runtime';

export type EchoRequest = Endpoint<{
  message: string,
}, EchoResponse>;

export type EchoResponse = Message<{
  echo: string,
  timestamp: number,
}>;

export type AddRequest = Endpoint<{
  a: number,
  b: number,
}, AddResponse>;

export type AddResponse = Message<{
  sum: number,
}>;
